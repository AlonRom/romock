<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoMock.Example.App.Controls.Loader"
             IsVisible="{Binding IsLoading, Mode=TwoWay}">
    <ContentView.Content>
        <Grid BackgroundColor="Transparent" Opacity="0.7">
            <ActivityIndicator IsRunning="{Binding IsLoading}" Color="#512BD4" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Grid>
    </ContentView.Content>
</ContentView>
